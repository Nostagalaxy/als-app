Grid {
    grid-size: 2 1;
}

#left_panel {
    align: right middle;
    width: 1fr;
}

#right_panel {
    width: 1fr;
    border: thick yellow;
}


#dialog {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}

#quit {
    background: orange;
}